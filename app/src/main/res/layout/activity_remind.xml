<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:background="#ff9327"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/back_more"
            android:layout_gravity="center|left"
            android:src="@drawable/icons_back_s"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="32dp"
            android:text="提醒设置"
            android:gravity="center"/>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="28dp"
            android:gravity="center_vertical"
            android:layout_weight="8"
            android:textSize="24sp"
            android:textStyle="bold"
            android:background="@drawable/remindsebg1"
            android:text="提醒方式"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@drawable/remindsetbg101">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="28dp"
                android:textSize="22sp"
                android:text="百分比:"
                android:id="@+id/percent" />
            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=""
                android:id="@+id/percentText"
                android:textSize="22sp"
                android:layout_toRightOf="@+id/percent"
                 />
            <ImageView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:id="@+id/percentView"
                android:src="@drawable/btn2"
                android:layout_alignParentRight="true"
                android:paddingRight="22dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@drawable/remindsetbg102">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="28dp"
                android:textSize="22sp"
                android:text="余    额:"
                android:id="@+id/balance" />
           <TextView
               android:layout_width="80dp"
               android:layout_height="match_parent"
               android:gravity="center"
               android:text=""
               android:id="@+id/balanceText"
               android:textSize="22sp"
               android:layout_toRightOf="@+id/balance"
                />
            <ImageView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:id="@+id/balanceView"
                android:src="@drawable/btn2"
                android:layout_alignParentRight="true"
                android:paddingRight="22dp"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="28dp"
            android:gravity="center_vertical"
            android:layout_weight="8"
            android:textSize="24sp"
            android:textStyle="bold"
            android:background="@drawable/remindsebg1"
            android:text="超支提醒"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@drawable/remindsetbg101">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="28dp"
                android:textSize="22sp"
                android:text="振       动" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="22dp"
                android:id="@+id/vibration"
                android:src="@drawable/choose"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@drawable/remindsetbg101">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="28dp"
                android:textSize="22sp"
                android:text="响       铃" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ring"
                android:paddingRight="22dp"
                android:src="@drawable/choose"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@drawable/remindsetbg102">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="28dp"
                android:textSize="22sp"
                android:text="短信提醒" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sms"
                android:paddingRight="22dp"
                android:src="@drawable/choose"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/remindsetbg101">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="28dp"
                android:gravity="center_vertical"
                android:layout_weight="8"
                android:textSize="24sp"
                android:textStyle="bold"
                android:id="@+id/textView6"
                android:background="@drawable/remindsetbg2"
                android:text="每日提醒"/>
            <ImageView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:id="@+id/dateRemind"
                android:src="@drawable/btn1"
                android:layout_alignParentRight="true"
                android:paddingRight="22dp"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>