<?xml version="1.0" encoding="utf-8"?>
    <android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id = "@+id/drawerlayout"
        android:layout_width = "match_parent"
        android:layout_height = "match_parent"
        >

        <!--main-->
        <LinearLayout
            android:id="@+id/main"
            android:layout_width = "match_parent"
            android:layout_height = "match_parent"
            android:orientation="vertical">
            <include layout="@layout/toolbar"/>
            <LinearLayout
                android:id="@+id/fragmentBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            </LinearLayout>
        </LinearLayout>
    <!--slidingMenu-->
    <LinearLayout
        android:layout_width = "280dp"
        android:layout_height = "match_parent"
        android:orientation="vertical"
        android:layout_gravity="start"
        android:background = "@color/red"
        >
        <LinearLayout
            android:id="@+id/ll_login"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@color/orange">
            <ImageView
                android:id="@+id/icon_login"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ph"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:textSize="28sp"
                android:textColor="@color/dark_white"
                android:text="请登录"/>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/ll_detail"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:background="@color/red">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/icon_detail"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/detail02"
                    />
                <TextView
                    android:id="@+id/detail"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="28sp"
                    android:textColor="@color/white"
                    android:text="账单"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/deep_orange"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/ll_report"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:background="@color/red">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/icon_report"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/report01"
                    />
                <TextView
                    android:id="@+id/report"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="28sp"
                    android:textColor="@color/dark_white"
                    android:text="报表"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/deep_orange"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/ll_remind"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:background="@color/red">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/icon_remind"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/remind01"
                    />
                <TextView
                    android:id="@+id/remind"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="28sp"
                    android:textColor="@color/dark_white"
                    android:text="提醒"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/deep_orange"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/ll_budget"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:background="@color/red">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/icon_budget"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/budget01"
                    />
                <TextView
                    android:id="@+id/budget"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="28sp"
                    android:textColor="@color/dark_white"
                    android:text="预算"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/deep_orange"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/ll_more"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:background="@color/red">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/icon_more"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/more01"
                    />
                <TextView
                    android:id="@+id/more"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="28sp"
                    android:textColor="@color/dark_white"
                    android:text="更多"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/deep_orange"/>
        </RelativeLayout>
    </LinearLayout>
    </android.support.v4.widget.DrawerLayout>
