<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/white"
    >
    <include layout="@layout/actionbar"
        android:id="@+id/toolbar"/>


    <LinearLayout android:id = "@+id/chargeMain"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation = "vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_below="@id/toolbar"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txt_account"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginRight="20dp"
                android:textSize="18sp"
                android:text="金     额"
                android:textColor="@color/deepgrey"/>
            <EditText
                android:id="@+id/editAmount"
                android:layout_width="fill_parent"
                android:phoneNumber="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/txt_account"
                android:layout_marginRight="40dp"
                android:background="@drawable/rect_shape"
                android:textColor="@color/lightdark"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/border"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txt_type"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginRight="20dp"
                android:textSize="18sp"
                android:text="类     别"
                android:textColor="@color/deepgrey"/>
            <EditText
                android:id="@+id/type"
                android:layout_width="fill_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/txt_type"
                android:layout_marginRight="40dp"
                android:background="@drawable/rect_shape"
                android:textColor="@color/deepgrey"
                />
            <ImageView
                android:id="@+id/more"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/icon_gengduo"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/border"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/feng"
            android:layout_width="fill_parent"
            android:layout_height="32dp"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:text="备     注"
            android:textColor="@color/deepgrey"/>
        <EditText
            android:id="@+id/editDetail"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:gravity = "top"
            android:background = "@drawable/shape"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:background="@color/orange">
        <TextView
            android:id="@+id/confirm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="确认"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:background="@drawable/shape_deeporange_solid_corner"
            />
    </LinearLayout>
</RelativeLayout>
